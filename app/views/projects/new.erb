<div class="container">

  <div class="col-md-8 col-md-offset-2">
    <h2>Create a New Project</h2>

    <div class="content">
      <p class="error"><%=session[:new_condition] if session[:new_condition]%></p>
      <% session.delete(:new_condition)%>
      <form action="/projects" method="POST">
        Title:
        <br>
        <input type="text" name="title" id="title">
        <br>
        Project Content:
        <br>
        <textarea name="content" rows="25" cols="35"></textarea>
        <br>
        Date Started:
        <br>
        <p><input type="date" name="date" id="date"></p>
        <br>
        <p><input type="submit" name="submit" value="Create New Project"></p>
      </form>
    </div>

  </div>
</div>
