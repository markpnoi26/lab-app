<div class="container">

  <div class="col-md-8 col-md-offset-2">
    <h2>Sign In</h2>

    <div class="content">
      <p><%=session[:sign_in_condition] if session[:sign_in_condition]%></p>
      <% session.delete(:sign_in_condition)%>
      <form action="/sign_in" method="POST">
        Username:
        <br>
        <input type="text" name="username" id="scientist_username">
        <br>
        Password:
        <br>
        <input type="password" name="password" id="scientist_password">
        <br>
        <input type="submit" id="Submit" value="Sign In">
        <br>
      </form>
    </div>

  </div>
</div>
